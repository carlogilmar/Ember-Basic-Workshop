<div class="text-center">
  <br><h2> Invites </h2>
  <p>We are going to show all invites.</p><br>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <table class="table table-sm table-hover">
      <thead>
        <tr>
          <th scope="col">User Invited</th>
          <th scope="col">Date</th>
          <th scope="col">Status</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |invite|}}
        <tr>
          <td> {{invite.user}} </td>
          <td> {{invite.dateCreated}} </td>
          <td>
            {{#if (eq invite.status "invited")}}
              <span class="badge badge-pill badge-primary"> Invited </span>
            {{/if}}
            {{#if (eq invite.status "reinvited")}}
              <span class="badge badge-pill badge-secondary"> Reinvited </span>
            {{/if}}
            {{#if (eq invite.status "answered")}}
              <span class="badge badge-pill badge-success"> Answered </span>
            {{/if}}
            {{#if (eq invite.status "canceled")}}
              <span class="badge badge-pill badge-danger"> Canceled </span>
            {{/if}}
          </td>
          <td>
            <button class="btn btn-outline-primary btn-sm" {{action 'reInvite' invite}}>Reinvite</button>
            <button class="btn btn-outline-success btn-sm" {{action 'answerInvite' invite}}>Answer</button>
            <button class="btn btn-outline-danger btn-sm"  {{action 'cancelInvite' invite}}>Cancel</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
