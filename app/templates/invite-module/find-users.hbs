<div class="text-center">
		<br><h2> Find Users </h2>
		<p>Find by username for assing invite</p>
		{{#link-to 'invite-module.new-user' class="btn btn-primary btn-sm"}} New User {{/link-to}}
		<br><br><br>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <table class="table table-sm table-hover">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
        <tr>
          <td> {{user.username}} </td>
          <td class="text-center">
						<button class="btn btn-sm btn-secondary" {{action 'showUser' user.id}}> Ver </button>
						<button class="btn btn-sm btn-primary" {{action 'inviteUser' user}}> Envíar Invitación </button>
					</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
